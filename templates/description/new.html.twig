{% extends 'base.html.twig' %}

{% block title %}New Description{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .ck-editor__editable {
            min-height: 50vh;
            max-height: 50vh;
        }
    </style>
{% endblock %}

{% block body %}

    {{ include('description/_form.html.twig') }}

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/ckeditor.js') }}"></script>
    <script>
        let editor;
        ClassicEditor.create(document.getElementById("description_body"), {
            toolbar: {
                items: [
                    'undo', 'redo',
                    'bold', 'italic', 'strikethrough', '|',
                    'bulletedList', 'numberedList', '|',
                    'outdent', 'indent', '|',
                    'fontSize', 'fontFamily', 'fontColor', 'fontBackgroundColor', 'highlight', '|'
                ],
                shouldNotGroupWhenFull: true
            },
            htmlSupport: {
                allow: [
                    {
                        name: /.*/,
                        attributes: true,
                        classes: true,
                        styles: true
                    }
                ]
            },
        })
            .then(newEditor => {
                editor = newEditor;
            });
    </script>
{% endblock %}