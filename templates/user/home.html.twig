{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>{{ user.firstname }} {{ user.lastname }}</h1> <a class="btn btn-primary" href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>

    <div class="row-fluid">
        <h1>Courses</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Term</th>
                <th>Coursename</th>
                <th>Title</th>
                <th>Instructorname</th>
                <th>Callnumber</th>
                <th>Time</th>
                <th>Building</th>
                <th>Room</th>
                <th>Days</th>
                <th>Area</th>
                <th>May</th>
            </tr>
            </thead>
            <tbody>
            {% for course in courses %}
                <tr>
                    <td>{{ course.term }}</td>
                    <td><a href="{{ path('course_show', {'id': course.id}) }}">{{ course.coursename }}</a></td>
                    <td>{{ course.title }}</td>
                    <td>{{ course.instructorname }}</td>
                    <td>{{ course.callnumber }}</td>
                    <td>{{ course.time }}</td>
                    <td>{{ course.building }}</td>
                    <td>{{ course.room }}</td>
                    <td>{{ course.days }}</td>
                    <td>{{ course.area }}</td>
                    <td>{{ course.may }} {{ course.summerterm }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="14">No Courses Found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <h2>Descriptions</h2>

    <table class="table">
        <thead>
        <tr>
            <th>Course</th>
        </tr>
        </thead>
        <tbody>
        {% for description in user.descriptions %}
            <tr>
                <td><a href="{{ path('description_show', {'id': description.id}) }}">For {{ description.course }}</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
