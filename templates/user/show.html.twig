{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <a class="cmp-button" href="{{ path('user_index') }}">List Users</a>

    <a class="cmp-button" href="{{ path('user_admin_edit', {'id': user.id}) }}">Edit</a>

    <table class="table">
        <tbody>
        <tr>
            <th>Firstname</th>
            <td>{{ user.firstname }}</td>
        </tr>
        <tr>
            <th>Lastname</th>
            <td>{{ user.lastname }}</td>
        </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                    {{ user.roles ? user.roles|join(', ') : '' }}
                </td>
            </tr>
        </tbody>
    </table>

    {{ include('user/_delete_form.html.twig') }}

{% endblock %}
